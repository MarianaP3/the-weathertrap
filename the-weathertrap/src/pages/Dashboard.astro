      <DashboardCard
        title="Velocidad de viento"
        info={22}
        description="Dirección del viento"
        icon={Cloud}
      />
      
      <DashboardCard
        title="Otra métrica"
        info={22}
        description="Descripción"
        icon={Cloud}
      />
    </div>

    <DashboardCard
      title="Horas de sol y probabilidad de lluvia"
      info={22}
      description="Mayormente nublado"
      icon={Cloud}
    />

    <DashboardCard
      title="Contenido adicional"
      info={22}
      description="Descripción"
      icon={Cloud}
    />
    </div>

    <div class="grid gap-6 grid-cols-3 mt-6">
      <DashboardCard
        title="Temperatura"
        info={22}
        description="Sensación térmica"
        icon={Cloud}
      />
      
      <DashboardCard
        title="Temperatura"
        info={22}
        description="Sensación térmica"
        icon={Cloud}
      />

        <DashboardCard
        title="Temperatura"
        info={22}
